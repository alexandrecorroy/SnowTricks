<hr class="col-lg-10">
<aside>
    <div class="container" id="comments-data">
        {% for comment in comments %}
        <div class="row listComments" id="{{ comment.id }}">
            <div class="col-lg-7 mx-auto mb-3 mt-2">
                <div class="panel panel-white post panel-shadow">
                    <div class="post-heading">
                        <div class="pull-left image">

                            {% if comment.user.picture is not null %}
                                <img src="{{ asset('uploads/pictures/' ~ comment.user.picture) }}" class="img-circle avatar" alt="user profile image">
                            {% else %}
                                <img src="{{ asset('img/no_user_picture.jpg') }}" class="img-circle avatar" alt="user profile image">
                            {% endif %}

                        </div>
                        <div class="text-left meta">

                            <div class="title">
                                <p><b>{{ comment.user.username }}</b> <i class="text-muted time">on {{ comment.createDate|date("F jS \\a\\t g:ia") }}</i></p>
                            </div>

                        </div>
                    </div>
                    <div class="post-description text-justify">
                        <p>{{ comment.message }}</p>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="ajax-load text-center" style="display:none">
        <p><img src="http://demo.itsolutionstuff.com/plugin/loader.gif">Loading More post</p>
    </div>
</aside>
