{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="col-lg-12 text-center mb-4">
        <h1 style="color: #5a6268">Login</h1>
    </div>
    <div class="col-lg-4 mx-auto text-center border border-dark">
        {% if error %}
            <div class="text-danger mt-3"><i class="fa fa-exclamation-triangle"></i> {{ error.message }}</div>
        {% endif %}
        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group">
                <label for="username" class="mt-3">Username</label>
                <input type="text" class="form-control" name="_username" id="username" aria-describedby="emailHelp" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="_password">
            </div>
            <a href="{{ path('snow_tricks_user_forgotPassword') }}">Forgot Password ?</a><br>
            <button type="submit" class="btn btn-primary mb-3 mt-3">Login</button>
        </form>
    </div>
{% endblock %}
